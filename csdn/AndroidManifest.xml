<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csdn"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CSDNApplication"
        android:allowBackup="true"
        android:icon="@drawable/csdn"
        android:label="@string/app_name"
        android:theme="@style/MMTheme.Basic">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".touchevent.TouchEventActivity"></activity>
        <activity android:name=".activity.RiseNumberActivity"></activity>
        <activity android:name=".activity.TimeLineActivity"></activity>
        <activity android:name=".activity.BadgeViewActivity"></activity>
        <activity android:name=".activity.HorizontalListViewActivity"></activity>
        <activity android:name=".activity.IndexableListViewActivity"></activity>
        <activity android:name=".pattern.UnlockGesturePasswordActivity"></activity>
        <activity android:name=".pattern.CreateGesturePasswordActivity"></activity>
        <activity android:name=".pattern.GuideGesturePasswordActivity"></activity>
        <activity android:name=".activity.SwipeMenuListViewActivity"></activity>
        <activity android:name=".swipemenulistview.SimpleActivity"></activity>
        <activity android:name=".swipemenulistview.DifferentMenuActivity"></activity>
    </application>

</manifest>